# Production Environment Variables
# Copy this file to .env and update with your production values

# Server Configuration
NODE_ENV=production
PORT=8080

# Database Configuration (for production, replace with PostgreSQL/MySQL)
DATABASE_URL=postgresql://username:password@localhost:5432/geoguard

# Security
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters-long
CORS_ORIGIN=https://yourdomain.com

# Google Maps API (for enhanced mapping features)
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# GPS Hardware Configuration (if using real GPS devices)
GPS_SERIAL_PORT=/dev/ttyUSB0
GPS_BAUD_RATE=9600

# Monitoring & Analytics
ANALYTICS_ENABLED=true
LOG_LEVEL=info

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
